<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/list_clienti_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/button_nuovo"
            android:layout_width="@dimen/nuovo_button_width"
            android:layout_height="@dimen/nuovo_button_width"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/greenbutton"
            android:contentDescription="@string/content_description"
            android:src="@drawable/plus_icon_green" />

        <ListView
            android:id="@+id/clienti_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/ti_deep_green"
            android:dividerHeight="@dimen/list_separator_height"
            android:drawSelectorOnTop="false" />
    </LinearLayout>

</FrameLayout>