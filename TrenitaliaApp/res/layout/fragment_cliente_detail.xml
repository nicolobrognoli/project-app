<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_element_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:text="@string/text_view_nome" />

        <EditText
            android:id="@+id/edit_text_nome"
            android:layout_width="@dimen/detail_edit_text_width"
            android:layout_height="@dimen/detail_element_height"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_element_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:text="@string/text_view_cognome" />

        <EditText
            android:id="@+id/edit_text_cognome"
            android:layout_width="@dimen/detail_edit_text_width"
            android:layout_height="@dimen/detail_element_height"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_element_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:text="@string/text_view_numero" />

        <EditText
            android:id="@+id/edit_text_numero"
            android:layout_width="@dimen/detail_edit_text_width"
            android:layout_height="@dimen/detail_element_height"
            android:inputType="number" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_element_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:text="@string/text_view_foto_viso" />

        <Button
            android:id="@+id/button_foto_viso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_foto" />
       
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_element_height"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:text="@string/text_view_foto_documento" />

        <Button
            android:id="@+id/button_foto_documento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_foto" />
       
    </LinearLayout>
    
    <Button
            android:id="@+id/button_salva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_salva" />

</LinearLayout>